from aiogram import Bot
from aiogram import types
from bot.helpers import BotCommands


async def change_main_menu(bot: Bot) -> None:
    print('change_main_menu', bot)
    bot_commands = [
        types.BotCommand(command=BotCommands.LogFood.value, description="–ó–∞–ø–∏—Å–∞—Ç—å –ø–∏—Ç–∞–Ω–∏–µ üçΩ"),
        types.BotCommand(command=BotCommands.LogWater.value, description="–ó–∞–ø–∏—Å–∞—Ç—å –≤–æ–¥—É üíß"),
        types.BotCommand(command=BotCommands.CheckProgress.value,
                         description="–ü—Ä–æ–≤–µ—Ä–∏—Ç—å –ø—Ä–æ–≥—Ä–µ—Å—Å üìà"),
        types.BotCommand(command=BotCommands.LogWorkout.value,
                         description="–ó–∞–ø–∏—Å–∞—Ç—å —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏ üèÉ‚Äç‚ôÇÔ∏è"),
        types.BotCommand(command=BotCommands.GetGraph.value,
                         description="–ü–æ—Å–º–æ—Ç—Ä–µ—Ç—å –≥—Ä–∞—Ñ–∏–∫–∏ üìä",),
        types.BotCommand(command=BotCommands.StartCommand.value,
                         description="–ù–∞—á–∞—Ç—å —Ä–∞–±–æ—Ç—É —Å –±–æ—Ç–æ–º üöÄ"),
        types.BotCommand(command=BotCommands.SetProfileCommand.value,
                         description="–£—Å—Ç–∞–Ω–æ–≤–∏—Ç—å –ø—Ä–æ—Ñ–∏–ª—å üë§"),
        types.BotCommand(command=BotCommands.HelpCommand.value,
                         description="–£–∑–Ω–∞—Ç—å –æ –±–æ—Ç–µ ‚ùì"),
    ]
    await bot.set_my_commands(bot_commands)
